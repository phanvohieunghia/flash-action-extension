{
	"name": "Flash Action",
	"description": "Improve an Extension!",
	"version": "1.0.1",
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": ["https://*/*"],
			"css": ["./global.css"],
			"js": ["./background.js"]
		}
	],
	"action": {
		"default_title": "Click to view a popup",
		"default_popup": "./popup/popup.html"
	},
	"icons": {
		"16": "images/16.png",
		"32": "images/32.png",
		"48": "images/48.png",
		"128": "images/128.png"
	}
}
