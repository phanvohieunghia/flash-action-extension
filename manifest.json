{
  "name": "Keyboard Action",
  "description": "Build an Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*", 
        "https://*.translate.google.com/*", 
        "https://*.youtube.com/*", 
        "https://*.oxfordlearnersdictionaries.com/*",
        "https://*.cambridge.org/*"
      ],
      "css": ["./css/style.css"],
      "js": ["./js/script.js"]
    }
  ]
}